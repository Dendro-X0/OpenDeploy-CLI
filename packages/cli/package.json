{
  "name": "opendeploy",
  "version": "1.2.2",
  "private": false,
  "type": "module",
  "bin": { "opd": "dist/index.js" },
  "files": [
    "dist/**",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "engines": { "node": ">=18" },
  "publishConfig": { "access": "public" },
  "scripts": {
    "build": "tsup --clean",
    "prepare:dist": "tsup --clean",
    "prepack": "pnpm build",
    "build:cjs": "tsup src/index.ts --format cjs --target node18 --out-dir dist-cjs --sourcemap --no-dts --no-minify --clean",
    "build:bin": "pnpm build:cjs && pkg dist-cjs/index.cjs --targets node18-win-x64,node18-linux-x64,node18-macos-arm64 --output artifacts/bin/opd",
    "build:bin:win": "pnpm build:cjs && pkg dist-cjs/index.cjs --targets node18-win-x64 --output artifacts/bin/opd-win-x64.exe",
    "build:bin:linux": "pnpm build:cjs && pkg dist-cjs/index.cjs --targets node18-linux-x64 --output artifacts/bin/opd-linux-x64",
    "build:bin:mac": "pnpm build:cjs && pkg dist-cjs/index.cjs --targets node18-macos-arm64 --output artifacts/bin/opd-macos-arm64",
    "test": "vitest run",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ajv": "^8.17.1",
    "dotenv": "^16.4.5",
    "pg": "^8.12.0",
    "@clack/prompts": "^0.7.0",
    "@opendeploy/core": "workspace:*",
    "@opendeploy/provider-github-pages": "workspace:*",
    "@opendeploy/provider-cloudflare-pages": "workspace:*",
    "@opendeploy/provider-vercel": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "vitest": "^3.2.4",
    "@biomejs/biome": "^2.2.4",
    "typescript": "^5.9.2",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [],
    "assets": [],
    "outputPath": "artifacts/bin"
  }
}