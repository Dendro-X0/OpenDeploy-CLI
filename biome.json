{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "organizeImports": { "enabled": true },
  "formatter": { "enabled": true, "lineWidth": 100 },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error",
        "noParameterAssign": "error"
      },
      "suspicious": {
        "noExplicitAny": "error"
      }
    }
  },
  "files": {
    "ignore": ["dist", "node_modules"]
  }
}
