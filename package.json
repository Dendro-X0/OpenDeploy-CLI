{
  "name": "opendeploy-cli",
  "version": "1.1.1",
  "description": "OpenDeploy CLI â€” cross-provider deployment tool focused on Next.js first.",
  "type": "module",
  "bin": {
    "opendeploy": "dist/index.js",
    "opendeploy-cli": "dist/index.js",
    "opd": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "build:go": "node -e \"require('fs').mkdirSync('.bin',{recursive:true})\" && (go build -C ./go -o ../.bin/opd-go.exe ./cmd/opd-go || go build -C ./go -o ../.bin/opd-go ./cmd/opd-go)",
    "build:go:win": "node -e \"require('fs').mkdirSync('.bin',{recursive:true})\" && go build -C ./go -o ../.bin/opd-go.exe ./cmd/opd-go",
    "build:go:nix": "node -e \"require('fs').mkdirSync('.bin',{recursive:true})\" && go build -C ./go -o ../.bin/opd-go ./cmd/opd-go",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "ci:docs-links": "node scripts/docs-link-check.mjs",
    "ci:exit-codes": "node scripts/ci-exits.mjs",
    "ci:validate-schemas": "node scripts/validate-schemas.mjs",
    "ci:capture-validate": "node scripts/ci-capture-validate.mjs"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "license": "MIT",
  "author": "OpenDeploy Contributors",
  "dependencies": {
    "clipboardy": "^3.0.0",
    "@clack/prompts": "^0.7.0",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "pg": "^8.16.3",
    "zx": "^8.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.3.3",
    "@types/pg": "^8.10.2",
    "ajv": "^8.17.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
