{
  "name": "opendeploy",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "ci:watch": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\.bin\\ci-watch.ps1",
    "ci:dispatch": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\.bin\\ci-dispatch.ps1",
    "ci:last": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\.bin\\ci-last.ps1",
    "ci:logs": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\.bin\\ci-logs.ps1",
    "ci:logs:full": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\.bin\\ci-logs-detailed.ps1 -Tail 500",
    "ci:download": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\.bin\\ci-download.ps1",
    "ci:exit-codes": "node scripts/ci/exit-codes.mjs",
    "ci:validate-schemas": "node scripts/ci/validate-schemas.mjs",
    "ci:capture-validate": "node scripts/ci/capture-validate.mjs"
  }
}
